{
  "info": {
    "name": "Room Booking API",
    "_postman_id": "room-booking-collection",
    "description": "Collection for Room Booking System endpoints (replace {{base_url}} with your deployment URL).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "https://your-app.vercel.app" },
    { "key": "auth_token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth - Register (Supabase UI)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"email\": \"user@example.com\", \"password\": \"User123!\" }"
        },
        "url": { "raw": "{{base_url}}/auth/sign-up", "host": [ "{{base_url}}" ], "path": [ "auth", "sign-up" ] }
      }
    },
    {
      "name": "Auth - Login (Supabase UI)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{ \"email\": \"user@example.com\", \"password\": \"User123!\" }" },
        "url": { "raw": "{{base_url}}/auth/login", "host": [ "{{base_url}}" ], "path": [ "auth", "login" ] }
      }
    },
    {
      "name": "Get Active Rooms",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/api/rooms", "host": [ "{{base_url}}" ], "path": [ "api", "rooms" ] }
      }
    },
    {
      "name": "Create Room (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "body": { "mode": "raw", "raw": "{ \"room_number\": \"101\", \"beds\": 2, \"is_active\": true }" },
        "url": { "raw": "{{base_url}}/api/admin/rooms", "host": [ "{{base_url}}" ], "path": [ "api", "admin", "rooms" ] }
      }
    },
    {
      "name": "Update Room (admin)",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"is_active\": false }" },
        "url": { "raw": "{{base_url}}/api/admin/rooms/:id", "host": [ "{{base_url}}" ], "path": [ "api", "admin", "rooms", ":id" ] }
      }
    },
    {
      "name": "Delete Room (admin)",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
        "url": { "raw": "{{base_url}}/api/admin/rooms/:id", "host": [ "{{base_url}}" ], "path": [ "api", "admin", "rooms", ":id" ] }
      }
    },
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"room_id\": \"ROOM_UUID\", \"start_time\": \"2025-12-01T10:00:00Z\", \"end_time\": \"2025-12-01T11:00:00Z\" }" },
        "url": { "raw": "{{base_url}}/api/reservations", "host": [ "{{base_url}}" ], "path": [ "api", "reservations" ] }
      }
    },
    {
      "name": "Get My Reservations",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
        "url": { "raw": "{{base_url}}/api/reservations", "host": [ "{{base_url}}" ], "path": [ "api", "reservations" ] }
      }
    },
    {
      "name": "Get All Reservations (admin)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
        "url": { "raw": "{{base_url}}/api/admin/reservations", "host": [ "{{base_url}}" ], "path": [ "api", "admin", "reservations" ] }
      }
    },
    {
      "name": "Promote User (admin)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"email\": \"user@example.com\" }" },
        "url": { "raw": "{{base_url}}/api/admin/promote", "host": [ "{{base_url}}" ], "path": [ "api", "admin", "promote" ] }
      }
    }
  ]
}
